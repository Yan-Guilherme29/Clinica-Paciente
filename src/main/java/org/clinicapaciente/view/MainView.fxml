<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.clinicapaciente.controller.MainController">

    <children>

        <VBox spacing="10" prefWidth="800" prefHeight="600">
            <padding>
                <Insets top="20" left="20" right="20" bottom="20"/>
            </padding>

            <!-- TÍTULO -->
            <Label text="Cadastro de Pacientes" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

            <!-- CAMPOS DO FORMULÁRIO -->
            <GridPane hgap="10" vgap="10">

                <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtID" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Nome:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtNome" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="CPF:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtCpf" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Telefone:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="txtTelefone" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Data Nascimento:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <DatePicker fx:id="txtDataNascimento" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>

            <!-- BOTÕES -->
            <HBox spacing="10">
                <Button text="Cadastrar" onAction="#onCadastrarClick"/>
                <Button text="Listar" onAction="#onListPacinteClick"/>
                <Button text="Atualizar" onAction="#onAtualizarPacienteClick"/>
                <Button text="Excluir" onAction="#onExcluirPacienteClick"/>
            </HBox>

            <!-- TABELA -->
            <TableView fx:id="tabelaDados" prefHeight="300">

                <columns>
                    <TableColumn fx:id="colID" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="colNome" text="Nome" prefWidth="150"/>
                    <TableColumn fx:id="colCpf" text="CPF" prefWidth="150"/>
                    <TableColumn fx:id="colTelefone" text="Telefone" prefWidth="150"/>
                    <TableColumn fx:id="colDataNascimento" text="Data Nasc." prefWidth="120"/>
                </columns>

            </TableView>

        </VBox>
    </children>
</AnchorPane>
